<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.Home"
    android:id="@+id/upperWrapper"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outerWrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/world_time_logo"
            android:id="@+id/timeLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectCountry"
            android:layout_below="@+id/timeLogo"
            android:textColor="@android:color/black"
            android:text="Select Location"
            android:backgroundTint="#fda502"
            android:drawableLeft="@drawable/ic_edit_location"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/flag"
            android:layout_below="@+id/selectCountry"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/loading"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country"
            android:layout_below="@+id/flag"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="Country"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/sixtyfour_regular"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:id="@+id/localTime"
            android:layout_below="@+id/country"
            android:layout_marginTop="10dp"
            android:textSize="60dp"
            android:textColor="#fda502"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            />

    </RelativeLayout>


</RelativeLayout>